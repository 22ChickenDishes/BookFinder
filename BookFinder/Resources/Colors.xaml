<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--主题色-->
    <Color x:Key="Color_Subject_Purple">#C999FF</Color>

    <!--默认白-->
    <Color x:Key="Color_SubjectColor_DefaultWhite">#FFFFFF</Color>
    
    <!--按钮容器灰色底色-->
    <Color x:Key="Color_ButtonGroupContainerBase">#E5E5E5</Color>

    <!--默认容器按钮颜色,可用状态-->
    <Color x:Key="Color_GrayContainerButton_AvailableStatus">#707070</Color>

    <!--默认容器按钮颜色,不可用状态-->
    <Color x:Key="Color_GrayContainerButton_UnavailableStatus">#A0A0A0</Color>

    <!--白色背景容器下按钮颜色-->
    <Color x:Key="Color_DefaultContainerButton_UnavailableStatus">#808080</Color>
    
</ResourceDictionary>